---
import Layout from "@/layouts/Layout.astro";
import ForgotPasswordForm from "@/components/forms/ForgotPasswordForm";
import GuestNavWrapper from "@/components/navigation/GuestNavWrapper";
import { detectLanguageFromHeader, t } from "@/lib/i18n";

export const prerender = false;

// Detect language from browser
const acceptLanguage = Astro.request.headers.get("accept-language");
const lang = detectLanguageFromHeader(acceptLanguage);
const pageTitle = `${t(lang, "auth.forgotPasswordTitle")} - ${t(lang, "common.appName")}`;
---

<Layout title={pageTitle}>
  <GuestNavWrapper lang={lang} client:only="react" />

  <main class="min-h-[calc(100vh-73px)] flex items-center justify-center p-4">
    <ForgotPasswordForm lang={lang} client:load />
  </main>
</Layout>
