---
import Layout from '@/layouts/Layout.astro';
import AddTournamentForm from '@/components/forms/AddTournamentForm';

export const prerender = false;

// This is a protected route - authentication check happens in middleware
---

<Layout title="Add Tournament">
  <div class="container mx-auto px-4 py-8 max-w-4xl">
    <div class="mb-8">
      <h1 class="text-3xl font-bold tracking-tight mb-2">Add Tournament</h1>
      <p class="text-muted-foreground">Record the results of your latest darts tournament</p>
    </div>
    
    <AddTournamentForm client:load />
  </div>
</Layout>

