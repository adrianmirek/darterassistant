---
// Redirect /score to main page with scoring view parameter
// This maintains backward compatibility while using SPA architecture

// Check if user is authenticated - redirect to tournaments if logged in
const user = Astro.locals.user;

export const prerender = false;

// Redirect authenticated users to tournaments page
if (user) {
  return Astro.redirect("/tournaments");
}

// Redirect to main page with scoring view parameter
// The GuestPage component will handle the routing
return Astro.redirect("/?view=scoring");
