---
import Layout from "@/layouts/Layout.astro";
import { GuestScorePage } from "@/components/guest/GuestScorePage";

// Check if user is authenticated - redirect to tournaments if logged in
const user = Astro.locals.user;

export const prerender = false;

// Redirect authenticated users to tournaments page
if (user) {
  return Astro.redirect("/tournaments");
}
---

<Layout title="Darter Assistant - Score Match" showAuthNav={false}>
  <Fragment slot="head">
    <!-- Prevent Chrome auto-translation which interferes with keyboard input -->
    <meta name="google" content="notranslate" />
    <meta http-equiv="content-language" content="pl" />
  </Fragment>
  <GuestScorePage client:only="react" />
</Layout>
