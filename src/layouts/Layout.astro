---
import "../styles/global.css";
import AuthNav from "@/components/navigation/AuthNav";
import LayoutWrapper from "@/components/navigation/LayoutWrapper";
import { detectLanguageFromHeader, type Language } from "@/lib/i18n";

interface Props {
  title?: string;
  showAuthNav?: boolean;
}

const { title = "Darter Assistant", showAuthNav = true } = Astro.props;
const user = Astro.locals.user;

// Detect language from browser
const acceptLanguage = Astro.request.headers.get("accept-language");
const detectedLang = detectLanguageFromHeader(acceptLanguage);

// Check if user has a stored language preference (client-side)
// This will be handled by client-side script below
---

<!doctype html>
<html lang={detectedLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Allow pages to add additional head elements -->
    <slot name="head" />
    
    <!-- PWA Meta Tags -->
    <meta name="description" content="Your personal darts training and tournament assistant" />
    <meta name="theme-color" content="#14b8a6" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <meta name="apple-mobile-web-app-title" content="Darter" />
    <link rel="apple-touch-icon" href="/pwa-192x192.png" />
    <!-- Language initialization script - set language based on stored preference or browser -->
    <script is:inline define:vars={{ detectedLang }}>
      // Get stored language preference or use detected language
      const storedLang = localStorage.getItem("darter-language");
      const currentLang = storedLang || detectedLang;
      
      // Store the language if not already stored
      if (!storedLang) {
        localStorage.setItem("darter-language", currentLang);
      }
      
      // Set the lang attribute
      document.documentElement.lang = currentLang;
      
      // Store in global scope for React components
      window.__DARTER_LANG__ = currentLang;
    </script>
    <!-- Theme initialization script - prevents flash of wrong theme -->
    <script is:inline>
      document.documentElement.classList.add(localStorage.getItem("darter-theme") || "dark");
    </script>
    <!-- Unregister old service worker if present -->
    <script is:inline>
      if ('serviceWorker' in navigator) {
        navigator.serviceWorker.getRegistrations().then(function(registrations) {
          for (let registration of registrations) {
            registration.unregister();
            console.log('Old service worker unregistered');
          }
        });
      }
    </script>
    <!-- Sidebar state initialization - prevents flash on navigation -->
    <script is:inline>
      const sidebarExpanded = localStorage.getItem("darter-sidebar-expanded") === "true";
      if (sidebarExpanded) {
        document.documentElement.style.setProperty("--sidebar-initial-width", "16rem");
        document.documentElement.style.setProperty("--sidebar-initial-opacity", "1");
      } else {
        document.documentElement.style.setProperty("--sidebar-initial-width", "0px");
        document.documentElement.style.setProperty("--sidebar-initial-opacity", "0");
      }
    </script>
    <!-- PWA Install Prompt Handler -->
    <script is:inline>
      let deferredPrompt;
      
      window.addEventListener('beforeinstallprompt', (e) => {
        // Prevent the default mini-infobar from appearing
        e.preventDefault();
        // Store the event so it can be triggered later
        deferredPrompt = e;
        // Show custom install UI
        showInstallButton();
      });

      function showInstallButton() {
        // Create install button if it doesn't exist
        let installBtn = document.getElementById('pwa-install-btn');
        if (!installBtn) {
          installBtn = document.createElement('button');
          installBtn.id = 'pwa-install-btn';
          installBtn.innerHTML = 'ðŸ“± Install App';
          installBtn.style.cssText = `
            position: fixed;
            bottom: 20px;
            right: 20px;
            padding: 12px 24px;
            background: linear-gradient(135deg, #14b8a6 0%, #8b5cf6 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            box-shadow: 0 4px 12px rgba(20, 184, 166, 0.4);
            z-index: 9999;
            transition: transform 0.2s, box-shadow 0.2s;
            animation: slideIn 0.3s ease-out;
          `;
          
          // Add animation
          const style = document.createElement('style');
          style.textContent = `
            @keyframes slideIn {
              from {
                transform: translateY(100px);
                opacity: 0;
              }
              to {
                transform: translateY(0);
                opacity: 1;
              }
            }
            #pwa-install-btn:hover {
              transform: translateY(-2px);
              box-shadow: 0 6px 20px rgba(20, 184, 166, 0.6);
            }
            #pwa-install-btn:active {
              transform: translateY(0);
            }
          `;
          document.head.appendChild(style);
          
          installBtn.addEventListener('click', async () => {
            if (!deferredPrompt) return;
            
            // Show the install prompt
            deferredPrompt.prompt();
            
            // Wait for the user's response
            const { outcome } = await deferredPrompt.userChoice;
            
            if (outcome === 'accepted') {
              console.log('PWA installed successfully');
            } else {
              console.log('PWA installation dismissed');
            }
            
            // Clear the deferred prompt
            deferredPrompt = null;
            
            // Hide the install button
            installBtn.remove();
          });
          
          document.body.appendChild(installBtn);
        }
      }

      // Hide install button after PWA is installed
      window.addEventListener('appinstalled', () => {
        const installBtn = document.getElementById('pwa-install-btn');
        if (installBtn) {
          installBtn.remove();
        }
        console.log('PWA was installed');
      });

      // Check if already installed (standalone mode)
      window.addEventListener('DOMContentLoaded', () => {
        if (window.matchMedia('(display-mode: standalone)').matches || window.navigator.standalone) {
          // Already installed, don't show button
          const installBtn = document.getElementById('pwa-install-btn');
          if (installBtn) {
            installBtn.remove();
          }
        }
      });
    </script>
  </head>
  <body>
    {showAuthNav && user && <AuthNav userEmail={user.email} lang={detectedLang} client:load />}
    {
      user ? (
        <LayoutWrapper lang={detectedLang} client:load>
          <slot />
        </LayoutWrapper>
      ) : (
        <slot />
      )
    }
  </body>
</html>

<style>
  html {
    margin: 0;
    width: 100%;
    height: 100%;
    scrollbar-gutter: stable;
  }

  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
